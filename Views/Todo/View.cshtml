                    <td>@item.Title</td>
                    <td>
                        @if (item.IsDone)
                        {
                            <span class="badge bg-success">Ho√†n th√†nh</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">ƒêang l√†m</span>
                        }
                    </td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <!-- N√∫t ƒë·ªÉ s·ª≠a Todo Item -->
                        <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#todoModal" data-id="@item.Id" data-title="@item.Title" data-isdone="@item.IsDone.ToString().ToLower()">S·ª≠a</button>

                        <form method="post" asp-action="Delete" asp-route-id="@item.Id" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">X√≥a</button>
